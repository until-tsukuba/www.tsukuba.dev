---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="tsukuba.devに関する情報を掲載しています。" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - www.tsukuba.dev</title>
	</head>
	<body>
		<header />
		<main>
			<slot />
		</main>
		<footer />
	</body>
</html>